<div class="container-centered">

  <div class="container-boards">
  <div class="list-boards">
    <h1>boards</h1>
    <% @boards.each do |board| %>
      <%= link_to board_path(board), class: "link-board" do %>
        <p>
          <%= board.name %>
          <%= image_tag "white_skull.png", class: "img-friendship-skull" if board.user_total < board.friend_user_total && current_user == board.friendship.user %>
          <%= image_tag "white_skull.png", class: "img-friendship-skull" if board.user_total > board.friend_user_total && current_user == board.friendship.friend_user %>
        </p>
      <% end %>
    <% end %>
    </div>
  <%= link_to "new board", new_board_path, class: "sign-up-btn" %>
</div>
</div>
